generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Webhook {
  id         String      @id
  pollGroups PollGroup[]
}

model PollGroup {
  id        String    @id @db.VarChar(12)
  name      String
  createdAt DateTime  @default(now())
  polls     Poll[]
  webhooks  Webhook[]
}

model Poll {
  id          String     @id @default(uuid())
  urlId       Int
  question    String
  createdAt   DateTime   @default(now())
  pollGroupId String
  pollGroup   PollGroup  @relation(fields: [pollGroupId], references: [id])
  options     Option[]
  response    Response[]

  @@unique([urlId, pollGroupId])
  @@index([pollGroupId])
}

model Option {
  id        String     @id @default(uuid())
  option    String
  pollId    String
  poll      Poll       @relation(fields: [pollId], references: [id])
  responses Response[]

  @@index([pollId])
}

model Response {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  pollId    String
  poll      Poll     @relation(fields: [pollId], references: [id])
  optionId  String
  option    Option   @relation(fields: [optionId], references: [id])
  ipAddress String

  @@unique([ipAddress, pollId])
  @@index([optionId])
  @@index([pollId])
}
