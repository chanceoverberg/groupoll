generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

// TODO: remove this test model
model Product {
  id          Int       @id @default(autoincrement())
  name        String
  description String
  price       Decimal
  image       String
  category    Category? @relation(fields: [category_id], references: [id])
  category_id Int

  @@index([category_id])
}

// TODO: remove this test model
model Category {
  id          Int       @id @default(autoincrement())
  name        String
  description String
  products    Product[]
}

model SurveyGroup {
  id        Int      @id @default(autoincrement())
  urlId     String   @unique @db.VarChar(12)
  name      String
  createdAt DateTime @default(now())
  surveys   Survey[]
}

model Survey {
  id            Int         @id @default(autoincrement())
  urlId         Int
  question      String
  createdAt     DateTime    @default(now())
  surveyGroupId Int
  surveyGroup   SurveyGroup @relation(fields: [surveyGroupId], references: [id])
  options       Option[]

  @@unique([urlId, surveyGroupId])
  @@index([surveyGroupId])
}

model Option {
  id        Int        @id @default(autoincrement())
  option    String
  surveyId  Int
  survey    Survey     @relation(fields: [surveyId], references: [id])
  responses Response[]

  @@index([surveyId])
}

model Response {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  optionId  Int
  option    Option   @relation(fields: [optionId], references: [id])
  ipAddress String

  @@index([optionId])
}
